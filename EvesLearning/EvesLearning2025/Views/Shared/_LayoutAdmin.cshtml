<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>@ViewBag.Title - Eves Elearning</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            overflow-x: hidden;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        
        .sidebar {
            position: fixed;
            top: 30px; 
            left: 0;
            width: 200px;
            height: 100vh;
            background-color: #2c3e50;
            padding: 10px;
            color: white;
            transition: transform 0.3s ease;
            transform: translateX(-100%); 
            z-index: 100;
        }

            .sidebar.visible {
                transform: translateX(0);
            }

        .header {
            background-color: #6a1b9a;
            color: white;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            height: 40px;
            display: flex;
            align-items: center;
            padding-left: 20px; 
        }

        /* Content */
        .content {
            margin-left: 0; 
            margin-top: 30px; 
            padding: 20px;
            transition: margin-left 0.3s ease; 
        }

            .content.visible {
                margin-left: 200px;
            }

        .footer {
            background-color: #6a1b9a;
            color: white;
            text-align: center;
            padding: 10px;
            margin-top: auto;
        }

        .menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .menu > li {
                margin: 10px 0;
            }

                .menu > li > a {
                    color: white;
                    text-decoration: none;
                    display: flex;
                    align-items: center;
                    justify-content: flex-start;                
                    padding: 8px 12px;
                    border-radius: 4px;
                    transition: background-color 0.3s ease;
                    gap: 8px;
                }

                    .menu > li > a:hover {
                        background-color: #34495e;
                    }

        .dropdown-menu {
            display: none; 
            list-style: none;
            margin: 0;
            padding: 10px 0;
            background-color: #34495e;
            border-radius: 8px; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
            position: absolute;
            z-index: 200;
            min-width: 150px; 
        }

            .dropdown-menu > li > a {
                display: block;
                color: #bdc3c7;
                text-decoration: none;
                padding: 10px 15px; 
                transition: background-color 0.3s ease, color 0.3s ease;
                border-radius: 4px;
            }

                .dropdown-menu > li > a:hover {
                    background-color: #2c3e50;
                    color: white;
                }

        .dropdown.active .dropdown-menu {
            display: block;
        }


    </style>
</head>
<body>
    <div class="sidebar" id="sidebar">
        <ul class="menu">
            <li><a href="#"><i class="fa fa-home"></i> Boteves</a></li>
            <li><a href="#"><i class="fa fa-eye"></i> Viewbot</a></li>
            <li><a href="#"><i class="fa fa-users"></i> Users</a></li>
            <li><a href="#"><i class="fa fa-graduation-cap"></i> Học viên</a></li>
            <li><a href="#"><i class="fa fa-book"></i> Khóa học</a></li>
            <li><a href="#"><i class="fa fa-file"></i> Đăng kí khóa học</a></li>
            <li><a href="#"><i class="fa fa-calculator"></i> Tính toán chi phí</a></li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" onclick="toggleDropdown(event, 'mobileDropdown')">
                    <i class="fa fa-user"></i> Mobile Phone 
                </a>
                <ul id="mobileDropdown" class="dropdown-menu">
                    <li><a href="#">New...</a></li>
                    <li><a href="#">Profile</a></li>
                    <li><a href="#">Settings</a></li>
                    <li><a href="#">Sign out</a></li>
                </ul>
            </li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" onclick="toggleDropdown(event, 'frameworkDropdown')">
                    <i class="fa fa-user"></i> Frameworks 
                </a>
                <ul id="frameworkDropdown" class="dropdown-menu">
                    <li><a href="#">New...</a></li>
                    <li><a href="#">Profile</a></li>
                </ul>
            </li>
        </ul>
    </div>

    <div class="wrapper">
        <div class="header">
            <button class="btn btn-light btn-sm" id="menuToggle">☰</button> Evs Learning
        </div>
        <div class="content" id="content">
            <div class="container body-content">
                @RenderBody()
                <hr />
            </div>
        </div>
        <div class="footer">
            <p>© @DateTime.Now.Year - Eves Elearning</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.querySelector('.sidebar');
            const content = document.getElementById('content');
            const menuToggle = document.getElementById('menuToggle');

            sidebar.classList.remove('visible');
            content.classList.remove('visible');

            menuToggle.addEventListener('click', function () {
                sidebar.classList.toggle('visible');
                content.classList.toggle('visible');
            });
        });

        function toggleDropdown(event, dropdownId) {
            event.preventDefault(); 

            const dropdown = document.getElementById(dropdownId);

            document.querySelectorAll('.dropdown-menu').forEach(menu => {
                if (menu !== dropdown) {
                    menu.parentElement.classList.remove('active');
                }
            });

            dropdown.parentElement.classList.toggle('active');
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
