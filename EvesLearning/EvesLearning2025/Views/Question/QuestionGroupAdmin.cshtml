@{
    Layout = ViewBag.Layout;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    var apiBaseUrl = "@(ViewBag.ApiBaseUrl)";
</script>
<script src="~/js/questiongroup.js"></script>

<div class="table-responsive">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Danh sách nhóm câu hỏi</h3>
        <!-- Nút Thêm mới -->
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addNewGroup">
            Thêm mới
        </button>
    </div>
    <table class="table table-bordered">
        <thead class="table-primary">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Reference</th>
                <th scope="col">Status</th>
                <th scope="col">Deleted</th>
                <th scope="col">Index</th>
                <th scope="col">CreatedBy</th>
                <th scope="col">DateCreated</th>
                <th scope="col">ModifyBy</th>
                <th scope="col">DateModify</th>
                <th scope="col">Language</th>
                <th scope="col">Tác vụ</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<div class="modal fade" id="addNewGroup" tabindex="-1" aria-labelledby="addNewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addNewModalLabel">Thêm mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form Thêm mới -->
                <form id="addNewForm">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <div class="d-flex align-items-center">
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <div class="d-flex align-items-center">
                                    <input type="text" class="form-control" id="description" name="description" required>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Reference</label>
                                <div class="d-flex align-items-center">
                                    <input type="text" class="form-control" id="reference" name="reference" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu</button>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="updateLevel" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateModalLabel">Cập nhật</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form Cập nhật -->
                <form id="updateForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <div class="d-flex align-items-center">
                                    <input type="text" class="form-control" id="updateName" name="updateName" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <div class="d-flex align-items-center">
                                    <input type="text" class="form-control" id="updateDescription" name="updateDescription" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Reference</label>
                                <div class="d-flex align-items-center">
                                    <input type="text" class="form-control" id="updateReference" name="updateReference" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </form>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
